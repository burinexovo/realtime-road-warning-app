<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.map.MapsFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/background_search"
        android:elevation="10dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_common_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toTopOf="@id/fl_my_location"
        app:layout_constraintEnd_toEndOf="@id/fl_my_location">

        <ImageView
            android:id="@+id/iv_common_address"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_background_effect"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:elevation="20dp"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_round_favorite_border_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20sp"
        app:layout_constraintBottom_toTopOf="@id/cl_bottom_tools"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_my_location"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_background_effect"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:elevation="20dp"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_round_gps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/map_search_content_background"
        android:elevation="10dp"
        android:paddingVertical="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_duration"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_clock"
                android:layout_marginStart="30dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintEnd_toStartOf="@id/tv_duration"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/iv_duration"
                app:layout_constraintBottom_toBottomOf="@id/iv_duration"
                app:layout_constraintEnd_toStartOf="@id/iv_distance"
                app:layout_constraintStart_toEndOf="@id/iv_duration" />

            <ImageView
                android:id="@+id/iv_distance"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_distance_color"
                app:layout_constraintEnd_toStartOf="@id/tv_distance"
                app:layout_constraintStart_toEndOf="@id/tv_duration" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_distance"
                app:layout_constraintBottom_toBottomOf="@id/iv_distance"
                app:layout_constraintStart_toEndOf="@id/iv_distance" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_background_effect"
            android:text="@string/direction"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_detail" />

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/button_background_effect"
            android:text="@string/navigation"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/btn_direction"
            app:layout_constraintBottom_toBottomOf="@id/btn_direction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_direction" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>